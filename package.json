{
  "name": "reciperu-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "yarn prepare:prd && expo start",
    "ts:check": "tsc",
    "prepare:dev": "cp .env.dev .env && cp .env.dev.local .env.local",
    "prepare:prd": "cp .env.prd .env && cp .env.prd.local .env.local",
    "android:dev": "yarn prepare:dev && expo run:android",
    "android": "yarn prepare:prd && expo run:android",
    "ios:dev": "yarn prepare:dev && npx expo run:ios",
    "ios": "yarn prepare:prd && npx expo run:ios",
    "web": "expo start --web",
    "lint": "yarn lint:prettier && yarn lint:es",
    "format": "yarn format:prettier && yarn format:es",
    "lint:prettier": "yarn prettier --check .",
    "format:prettier": "yarn prettier --check --write .",
    "lint:es": "yarn eslint .",
    "format:es": "yarn eslint . --fix"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "@react-native-community/slider": "4.4.2",
    "@react-native-google-signin/google-signin": "^10.0.1",
    "axios": "^1.6.0",
    "expo": "~49.0.13",
    "expo-asset": "~8.10.1",
    "expo-barcode-scanner": "~12.5.3",
    "expo-constants": "~14.4.2",
    "expo-file-system": "~15.4.4",
    "expo-font": "~11.4.0",
    "expo-image": "~1.3.4",
    "expo-image-picker": "~14.3.2",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-secure-store": "~12.3.1",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "firebase": "^10.5.0",
    "react": "18.2.0",
    "react-native": "0.72.5",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-svg": "13.9.0",
    "react-native-url-polyfill": "^2.0.0",
    "swr": "^2.2.4",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native-snap-carousel": "^3.8.9",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-universe": "^12.0.0",
    "prettier": "^3.0.3",
    "react-native-dotenv": "^3.4.9",
    "typescript": "^5.1.3"
  },
  "eslintConfig": {
    "extends": "universe/native"
  },
  "private": true
}
